# WhatsApp Integration Environment Variables
# Copy these to your .env file and update with your actual values

# ===================================
# WhatsApp API Configuration
# ===================================

# Enable/disable WhatsApp integration globally
VITE_WHATSAPP_ENABLED=true

# WhatsApp API endpoint URL
VITE_WHATSAPP_API_URL=http://localhost:8080

# WhatsApp API credentials
VITE_WHATSAPP_API_USERNAME=admin
VITE_WHATSAPP_API_PASSWORD=your_secure_password

# Request timeout in milliseconds
VITE_WHATSAPP_API_TIMEOUT=10000

# ===================================
# Receipt Configuration
# ===================================

# Base URL for receipt links in WhatsApp messages (optional)
# If not set, will auto-detect from current domain
VITE_RECEIPT_BASE_URL=https://your-domain.com

# ===================================
# Notification Feature Flags
# ===================================

# Send notification when order is created
VITE_WHATSAPP_NOTIFY_ORDER_CREATED=true

# Send notification when order is completed
VITE_WHATSAPP_NOTIFY_ORDER_COMPLETED=true

# ===================================
# Sender Configuration
# ===================================

# Default sender phone number (used when wa_use_store_number is false)
# Format: Country code + phone number (without '+' sign)
VITE_WA_DEFAULT_SENDER=6282125458657

# ===================================
# Development Settings
# ===================================

# Development mode is automatically detected by Vite
# Set VITE_WHATSAPP_ENABLED=false in development to disable completely
